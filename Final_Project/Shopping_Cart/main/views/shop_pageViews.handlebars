<div>
	<div class="table-responsive">
		<table class="table table-condensed">
			{{#if data}}
			<thead>
				<tr>
					<th>Items</th>
					<th>Quantity</th>
					<th>Price</th>
					<th>Description</th>
					
				</tr>
			</thead>
			{{else}}
			<tr><td colspan="4">No items available ...!</td></tr>
			{{/if}}
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.item}}</td>
						<td>{{this.quantity}}</td>
						<td>${{this.price}}</td>
						<td>{{this.description}}</td>
						</td>
						<td>
							<a href="/browse/order/{{this.id}}">Order</a>  
						</td>
					</tr>
				{{/each}}
			</tbody>
			 <tfooter>
        <tr>
         
          <td>
              <input type="button" value="Search Item" class= "btn btn-success"
                  onclick="gobacksearch()">
          </td>
        </tr>
        
        <tr><td>
				<button class="btn btn-primary" 
						onClick="pastOrders();">Past Orders</button>
				</td></tr>
      </tfooter>
			
		</table>
	</div>
</div>
