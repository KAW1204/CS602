<div class="table-responsive">
  <form method="post" action='/customer/edit'>
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>First Name: </th>
          <td><input type="text" name="firstName" required size="40" 
                  value="{{data.FirstName}}"></td>
        </tr>
        <tr>
          <th>Last Name: </th>
          <td><input type="text" name="lastName" required size="40" 
                  value="{{data.LastName}}"></td>
        </tr>
        
         
     
        
        <input type="hidden" name="id" value="{{data.id}}">
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="Save" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="cancelAddCustomer()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
