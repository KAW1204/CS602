<div>
	<div class="table-responsive">
		<table class="table table-condensed">
			{{#if data}}
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					
					
				</tr>
			</thead>
			{{else}}
			<tr><td colspan="2">No Customers Online ...!</td></tr>
			
			{{/if}}
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.FirstName}}</td>
						<td>{{this.LastName}}</td>
						
						<td>
							<a href="/customer/edit/{{this.id}}">Edit</a>  
							<a href="/customer/delete/{{this.id}}">Delete</a>
							<a href="/customer/selection/{{this.id}}">Select</a>
						</td>
					</tr>
				{{/each}}
			</tbody>
			<tfooter>
				<tr><td>
				<button class="btn btn-primary" 
						onClick="addCustomer();">Add Customer</button>
				</td></tr>
			</tfooter>
		</table>
	</div>
</div>
