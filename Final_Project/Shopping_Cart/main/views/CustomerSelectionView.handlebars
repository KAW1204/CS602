<div class="table-responsive">
  <form method="post" action='/customer/selection'>
    <table class="table table-condensed">
      <tbody>
        
         <tr>
         
          <th>Cart: {{data.Orders}}</th>
          <td><input type="text" name="AddOrders" 
          placeholder = "Add Orders"
                  </td>
        </tr>
        
        <tr>
         
          <th>Cart: {{data.Orders}}</th>
          <td><input type="text" name="DelOrders"  
          placeholder = "Delete Orders"
                  </td>
        </tr>
        
         <tr>
         
          <th>Past Orders: {{data.PastOrders}}</th>
          
        </tr>
        
        <input type="hidden" name="id" value="{{data.id}}">
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="Save" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="cancelDelCustomer()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
